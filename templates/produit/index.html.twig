{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Lib</th>
                <th>Pu</th>
                <th>Qtes</th>
                <th>Seuil</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.lib }}</td>
                <td>{{ produit.pu }}</td>
                <td>{{ produit.qtes }}</td>
                <td>{{ produit.seuil }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a class="btn btn-info" href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
